@using Po.Joker.Shared.DTOs

<div class="joke-card @(IsTriumph == true ? "triumph" : (ShowResult ? "defeat" : ""))">
    @if (ShowCategory && Joke is not null)
    {
        <div class="joke-category">
            <span class="badge">@Joke.Category</span>
        </div>
    }

    @if (ShowSetup && Joke is not null)
    {
        <div class="joke-setup">
            <p>@Joke.Setup</p>
        </div>
    }

    @if (!string.IsNullOrEmpty(AiGuess))
    {
        <div class="ai-guess">
            <span class="label">ðŸŽ­ Jester's Guess:</span>
            <p>@AiGuess</p>
        </div>
    }

    @if (ShowPunchline && Joke is not null)
    {
        <div class="joke-punchline">
            <span class="label">ðŸ“œ Actual Punchline:</span>
            <p>@Joke.Punchline</p>
        </div>
    }
</div>

@code {
    [Parameter]
    public JokeDto? Joke { get; set; }

    [Parameter]
    public bool ShowSetup { get; set; }

    [Parameter]
    public bool ShowPunchline { get; set; }

    [Parameter]
    public bool ShowCategory { get; set; }

    [Parameter]
    public string? AiGuess { get; set; }

    [Parameter]
    public bool? IsTriumph { get; set; }

    [Parameter]
    public bool ShowResult { get; set; }
}
