@namespace Po.Joker.Client.Components

<div class="safe-mode-toggle">
    <label class="toggle-label">
        <input type="checkbox" 
               checked="@IsEnabled" 
               @onchange="HandleToggle" />
        <span class="toggle-slider"></span>
        <span class="toggle-text">
            üõ°Ô∏è Safe Mode @(IsEnabled ? "On" : "Off")
        </span>
    </label>
    <p class="toggle-hint">
        @if (IsEnabled)
        {
            <text>Filtering out inappropriate content</text>
        }
        else
        {
            <text>All joke categories enabled</text>
        }
    </p>
</div>

@code {
    [Parameter]
    public bool IsEnabled { get; set; } = true;

    [Parameter]
    public EventCallback<bool> IsEnabledChanged { get; set; }

    private async Task HandleToggle(ChangeEventArgs e)
    {
        IsEnabled = (bool)(e.Value ?? true);
        await IsEnabledChanged.InvokeAsync(IsEnabled);
    }
}
