@code {
    /// <summary>
    /// The AI Jester's commentary text to display.
    /// </summary>
    [Parameter]
    public string? Commentary { get; set; }

    /// <summary>
    /// Indicates whether the jester triumphed (true) or was defeated (false).
    /// </summary>
    [Parameter]
    public bool? IsTriumph { get; set; }

    private string StateClass => IsTriumph switch
    {
        true => "triumph",
        false => "defeat",
        null => ""
    };
}
