{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Po.Joker (Server)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/Po.Joker/bin/Debug/net10.0/Po.Joker.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Po.Joker",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:5001;http://localhost:5000"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Po.Joker (Attach)",
      "type": "coreclr",
      "request": "attach"
    }
  ],
  "compounds": [
    {
      "name": "Po.Joker (Full Stack)",
      "configurations": ["Po.Joker (Server)"]
    }
  ]
}
